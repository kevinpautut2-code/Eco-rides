# ============================================
# ECORIDE - Configuration Environnement
# ============================================

# Application
APP_NAME="EcoRide"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Base de données MySQL/MariaDB
DB_HOST=127.0.0.1
DB_PORT=8889
DB_NAME=ecoride
DB_USER=root
DB_PASS=root

# Base de données MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB=ecoride

# Sécurité
SESSION_SECRET=changez_cette_cle_secrete_par_une_valeur_aleatoire_unique
JWT_SECRET=changez_cette_cle_jwt_par_une_valeur_aleatoire_unique_longue
PASSWORD_PEPPER=changez_ce_pepper_par_une_valeur_aleatoire_unique

# Email (SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@ecoride.fr
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ecoride.fr
MAIL_FROM_NAME=EcoRide

# Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# API Keys (si nécessaire)
GOOGLE_MAPS_API_KEY=
MAPBOX_API_KEY=

# Pagination
ITEMS_PER_PAGE=20

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Logs
LOG_LEVEL=debug
LOG_PATH=logs/

# Session
SESSION_LIFETIME=7200
SESSION_COOKIE_NAME=ecoride_session
SESSION_SECURE=false
SESSION_HTTPONLY=true

# CORS (si API séparée)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Ratelimiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Credits
INITIAL_CREDITS=20
PLATFORM_FEE_CREDITS=2
